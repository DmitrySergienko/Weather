<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ds.weather">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weather">
        <service
            android:name=".view.details.DetailsService"
            android:exported="false"/>
        <service
            android:name=".view.experiments.MainService"
            android:enabled="true"
            android:exported="true" />

        <receiver android:name=".view.experiments.MainBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.CONNECTIVITY_ACTION" />
            </intent-filter>
        </receiver>

        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>